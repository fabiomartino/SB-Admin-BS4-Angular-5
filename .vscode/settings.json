{
  "tslint.alwaysShowRuleFailuresAsWarnings": true,
  "html.format.endWithNewline": true,
  "files.insertFinalNewline": true,
  "editor.showFoldingControls": "always",
  "editor.wordWrap": "off",
  "files.exclude": {
    "**/app/**/*.js.map": true,
    "**/app/**/*.js": {
      "when": "$(basename).ts"
    },
    "typings": true,
    "node_modules": true,
    ".history": true,
    ".vscode": true // this excludes the folder
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/documentation": true
  }
}
